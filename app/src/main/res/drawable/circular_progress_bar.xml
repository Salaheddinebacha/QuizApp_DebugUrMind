<!-- res/drawable/circular_progress_bar.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gris -->
    <item android:id="@android:id/background">
        <shape
            android:shape="ring"
            android:useLevel="false">
            <size
                android:width="48dp"
                android:height="48dp" />
            <stroke
                android:width="5dp"
                android:color="#D3D3D3" /> <!-- Gris clair -->
        </shape>
    </item>

    <!-- Progression bleue -->
    <item android:id="@android:id/progress">
        <shape
            android:shape="ring"
            android:useLevel="true">
            <size
                android:width="48dp"
                android:height="48dp" />
            <stroke
                android:width="5dp"
                android:color="#2196F3" /> <!-- Bleu -->
        </shape>
    </item>
</layer-list>
